#:kivy 2.0.0

ScreenManager:
    WelcomeScreen:

<WelcomeScreen@Screen>:
    name: "welcomeScreen"

    canvas.before:
        Rectangle:
            source: 'Images/Background.png'
            pos: self.pos
            size: self.size

    Label:
        id: notificationLabel
        text: ''
        font_size: self.height * 0.5
        bold: True
        color: (1, 1, 1, 1)
        size_hint: (None, None)
        size: (self.texture_size[0] + 40, 50)
        pos_hint: {'center_x': 0.5, 'top': 0.95}
        opacity: 0
        canvas.before:
            Color:
                rgba: (0, 0, 0, 0.8)
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [10]

    FloatLayout:
        # Title and buttons container
        BoxLayout:
            orientation: 'horizontal'
            spacing: 0
            size_hint: (0.8, None)
            height: self.width * 0.176
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            BoxLayout:
                orientation: 'vertical'
                spacing: 0
                size_hint_x: 0.667
                # Title
                Label:
                    text: '221B Baker Street'
                    font_size: self.height * 0.6
                    bold: True
                    color: (1, 1, 1, 1)
                    size_hint: (1, 0.5)
                    halign: 'center'
                    valign: 'center'
                    text_size: self.size
                    padding: (0, 0)
                    canvas.before:
                        Color:
                            rgba: (0, 0, 0, 0.7)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    canvas.after:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Line:
                            rectangle: (*self.pos, *self.size)
                            width: 2

                # Menu buttons container
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0
                    size_hint: (1, 0.5)

                    # Customise button
                    Button:
                        id: customiseButton
                        text: 'Customise'
                        font_size: self.height * 0.28
                        bold: True
                        color: (1, 1, 1, 1)
                        background_normal: ''
                        background_color: (0, 0, 0, 0.7)
                        size_hint_x: 0.5
                        canvas.after:
                            Color:
                                rgba: (0, 0, 0, 1)
                            Line:
                                rectangle: (*self.pos, *self.size)
                                width: 2

                    # Settings button
                    Button:
                        id: settingsButton
                        text: 'Settings'
                        font_size: self.height * 0.28
                        bold: True
                        color: (1, 1, 1, 1)
                        background_normal: ''
                        background_color: (0, 0, 0, 0.7)
                        size_hint_x: 0.5
                        canvas.after:
                            Color:
                                rgba: (0, 0, 0, 1)
                            Line:
                                rectangle: (*self.pos, *self.size)
                                width: 2

            # Create Game button with arrow
            Button:
                id: createGameButton
                text: 'CREATE\nGAME    >'
                font_size: self.height * 0.28
                bold: True
                color: (1, 1, 1, 1)
                background_normal: ''
                background_color: (0, 0, 0, 0.7)
                size_hint_x: 0.333
                on_release:
                    root.manager.current = "gameScreen"
                canvas.after:
                    Color:
                        rgba: (0, 0, 0, 1)
                    Line:
                        rectangle: (*self.pos, *self.size)
                        width: 2
